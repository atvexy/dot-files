// Global
*{
  all: unset;
}

// Variable Color's
$background: #1A1B26;
$foreground: #A9B1D6;

$black: #24283B;
$gray: #565F89;
$red: #F7768E;
$green: #73DACA;
$yellow: #E0AF68;
$blue: #7AA2F7;
$magenta: #BB9AF7;
$cyan: #7DCFFF;
$white: $foreground;

// EWW BAR
.eww_bar{
  background-color: $background;
  //background-color: #00000000;
  padding: .2rem .5rem .2rem .8rem;
  border-radius: 25px;
  margin: .35rem .35rem 0 .35rem;
}

// Launcher
.launcher_icon{
    color: $cyan;
    font-family: "Symbols Nerd Font Mono";
    font-size: 1.7em;
    padding: .25rem 0 .25rem 0;
}

// Workspaces
.works {
font-family: "Symbols Nerd Font Mono";
padding: .2rem .7rem .2rem .7rem;
background-color: $black;
border-radius: 5px;
}

.0 , .01, .02, .03, .04, .05, .06,
.011, .022, .033, .044, .055, .066{
  margin: .55rem 0 .55rem 0;
}

/* Unoccupied */
.0 {
color: $gray;
}

/* Occupied */
.01, .02, .03, .04, .05, .06 {
  color: $gray;
}

/* Focused */
.011,
.022,
.033,
.044,
.055,
.066 {
  color: $foreground;
}

.0:nth-child(1),
.0:nth-child(3){
  font-size: 1.5em;
}
.0:nth-child(2){
  font-size: 1.4em;
}
.0:nth-child(4),
.0:nth-child(5){
  font-size: 1.6em;
}
.0:nth-child(6){
  font-size: 1.7em;
}
.01,
.011,
.03,
.033{
  font-size: 1.5em;
}
.02,
.022{
  font-size: 1.4em;
}
.04,
.05,
.044,
.055{
  font-size: 1.6em;
}
.06,
.066{
  font-size: 1.7em;
}

// Control Panel
.control {
padding: .3rem;
font-family: Material Icons;
font-size: 1.1em;
background-color: $black;
border-radius: 5px;
margin: .2rem 0 .2rem 0;
}
.bat{
  font-family: JetBrainsMono Nerd Font;
  font-size: 0.95em;
  padding-right: .4rem;
  color: $blue;
}
.wifi-icon{
  margin-bottom: .1rem;
  padding-right: .2rem;
  color: $magenta;
}
.brightness-icon{
  margin: .1rem 0 .1rem 0;
  padding-right: .2rem;
  color: $yellow;
}
.volume-icon{
  margin: .1rem 0 .1rem 0;
  padding-right: .2rem;
  color: $green;
}
scale trough {
  all: unset;
  background-color: $background;
  border-radius: 5px;
  min-height: 10px;
  min-width: 80px;
  margin: .3rem 0 .3rem 0;
}
.bribar trough highlight {
  background-color: $yellow;
  border-radius: 5px;
}
.volbar trough highlight {
  background-color: $green;
  border-radius: 5px;
}

// Clock
.time {
  font-family: DejaVu Sans Mono;
  font-weight: bold;
  font-size: 1.1em;
  background-color: $black;
  color: $white;
  border-radius: 5px;
  padding: .3rem .3rem .1rem .3rem;
  margin: .2rem .5rem .2rem .5rem;
}

.time-separator {
  margin: .0rem .25rem;
}

